{
  "name": "lifecycle-manager",
  "version": "1.0.0",
  "description": "Utility for Node.js Application Lifecycle Management",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Macca2805/lifecycle-manager"
  },
  "dependencies": {
    "express": "4.17.1",
    "pg": "8.5.1"
  },
  "devDependencies": {
    "@types/express": "4.17.11",
    "@types/jest": "26.0.20",
    "@types/node": "14.14.25",
    "@types/pg": "7.14.10",
    "jest": "26.6.3",
    "ts-jest": "26.5.0",
    "typescript": "4.1.3"
  },
  "scripts": {
    "test": "jest",
    "build": "tsc"
  },
  "jest": {
    "rootDir": "./",
    "testMatch": [
      "<rootDir>/src/**/*.spec.ts"
    ],
    "transform": {
      "^.+\\.ts?$": "<rootDir>/node_modules/ts-jest"
    },
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testEnvironment": "node"
  }
}